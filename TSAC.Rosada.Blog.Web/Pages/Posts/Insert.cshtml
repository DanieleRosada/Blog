@page
@model TSAC.Rosada.Blog.Web.Pages.Posts.InsertModel
@{
    ViewData["Title"] = "Insert";
}

<h2>Insert</h2>

<form class="form-horizontal" asp-page="Insert" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <span asp-validation-for="Post.Title"></span>
        <label asp-for="Post.Title" class="col-sm-2"></label>
        <div class="col-sm-10">
            <input asp-for="Post.Title" class="form-control">
        </div>
    </div>

    <div class="form-group">
        <span asp-validation-for="Post.Content"></span>
        <label asp-for="Post.Content" class="col-sm-2"></label>
        <div class="col-sm-10">
            <textarea asp-for="Post.Content" class="form-control"></textarea>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Post.Image" class="col-sm-2"></label>
        <div class="col-sm-10">
            <input asp-for="Post.Image" type="file" class="form-control" accept="image/*">
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default" value="Save" name="value">SAVE</button>
            <button type="submit" class="btn btn-default" value="Public" name="value">PUBLIC</button>
        </div>
    </div>

</form>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}